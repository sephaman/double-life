<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-3.0.xsd	
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

<!-- Service Bean Definitions -->

	<bean id="stockService"
		class="com.doublelife.doublelife.services.impl.YahooStockServiceImpl">
	</bean>
	
	<bean id="userService"
		class="com.doublelife.doublelife.services.impl.UserServiceImpl">
		<property name="userDAO" ref="userDAO"></property>
	</bean>
	
	<bean id="stockProcessingService"
		class="com.doublelife.doublelife.services.impl.StockProcessingServiceImpl">
		<property name="userStockService" ref="userStockService"></property>
		<property name="stockOrderDAO" ref="stockOrderDAO"></property>
		<property name="stockService" ref="stockService"></property>
	</bean>
	
	<bean id="userStockService"
		class="com.doublelife.doublelife.services.impl.UserStockServiceImpl">
		<property name="userStockDAO" ref="userStockDAO"></property>
		<property name="stockOrderDAO" ref="stockOrderDAO"></property>
	</bean>
	
	<bean id="userBettingService"
		class="com.doublelife.doublelife.services.impl.UserBettingServiceImpl">
		<property name="userBettingDAO" ref="userBettingDAO"></property>
		<property name="bettingCompetitionDAO" ref="bettingCompetitionDAO"></property>
		<property name="userDAO" ref="userDAO"></property>
	</bean>
	
	<bean id="emailService"
		class="com.doublelife.doublelife.services.impl.EmailServiceImpl">
		<property name="mailSender" ref="springMailSender"></property>
	</bean>
	
	<bean id="userDetailsService" class="com.doublelife.doublelife.services.impl.UserDetailsServiceImpl"/>

	<bean id="competitionService"
		class="com.doublelife.doublelife.services.impl.CompetitionServiceImpl">
		<property name="competitionDAO" ref="competitionDAO"></property>
	</bean>
	
	<bean id="forumService"
		class="com.doublelife.doublelife.services.impl.ForumServiceImpl">
		<property name="forumDAO" ref="forumDAO"></property>
	</bean>
	
	<bean id="betDataRetrieverService"
		class="com.doublelife.doublelife.services.impl.BFBetDataRetrieverServiceImpl">
	</bean>

<!-- DAOs -->
	<bean id="userBettingDAO"
		class="com.doublelife.doublelife.data.dao.hibernate.HibernateUserBettingDAO">
		<constructor-arg ref="sessionFactory"></constructor-arg>
	</bean>
	
	<bean id="bettingCompetitionDAO"
		class="com.doublelife.doublelife.data.dao.hibernate.HibernateBettingCompetitionDAO">
		<constructor-arg ref="sessionFactory"></constructor-arg>
	</bean>
	
	<bean id="userDAO"
		class="com.doublelife.doublelife.data.dao.hibernate.HibernateUserDAO">
		<constructor-arg ref="sessionFactory"></constructor-arg>
	</bean>
	
	<bean id="userStockDAO"
		class="com.doublelife.doublelife.data.dao.hibernate.HibernateUserStockDAO">
		<constructor-arg ref="sessionFactory"></constructor-arg>
	</bean>
	
	<bean id="stockOrderDAO"
		class="com.doublelife.doublelife.data.dao.hibernate.HibernateStockOrderDAO">
		<constructor-arg ref="sessionFactory"></constructor-arg>
	</bean>
	
	<bean id="competitionDAO"
		class="com.doublelife.doublelife.data.dao.hibernate.HibernateCompetitionDAO">
		<constructor-arg ref="sessionFactory"></constructor-arg>
	</bean>
	
	<bean id="bankingDAO"
		class="com.doublelife.doublelife.data.dao.hibernate.HibernateBankingDAO">
		<constructor-arg ref="sessionFactory"></constructor-arg>
	</bean>
	
	<bean id="forumDAO"
		class="com.doublelife.doublelife.data.dao.hibernate.HibernateForumDAO">
		<constructor-arg ref="sessionFactory"></constructor-arg>
	</bean>
	
	<!-- Validators -->
	
	<bean id="userValidator"
		class="com.doublelife.doublelife.data.validator.UserValidator">
	</bean>
	
	<bean id="stockOrderValidator"
		class="com.doublelife.doublelife.data.validator.StockOrderValidator">
	</bean>
	
	<bean id="betCompetitionValidator"
		class="com.doublelife.doublelife.data.validator.BetCompetitionValidator">
	</bean>
	
	<bean id="competitionValidator"
		class="com.doublelife.doublelife.data.validator.CompetitionValidator">
	</bean>
	
	<bean id="seasonValidator"
		class="com.doublelife.doublelife.data.validator.SeasonValidator">
	</bean>
	
	<bean id="roundValidator"
		class="com.doublelife.doublelife.data.validator.RoundValidator">
	</bean>
	
	
	<!-- PersistenceUtil -->
	<bean id="persistenceUtil"
		class="com.doublelife.doublelife.services.utils.PersistenceUtil"
		factory-method="getInstance">
		<property name="daoImplementations">
			<map>
				<entry key="BetEvent" value-ref="userBettingDAO" />
				<entry key="user" value-ref="userDAO" />
			</map>
		</property>
	</bean>
	
</beans>
